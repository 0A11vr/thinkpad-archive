#!/bin/sh

date=$(date +%m.%d.%Y_%H:%M:%S)
title=$(xdotool getactivewindow getwindowname)
outfile="$XDG_PICTURES_DIR/screenshots/${date}_-_${title}.png"
#icon="/usr/share/icons/Adwaita/24x24/devices/camera-photo-symbolic.symbolic.png"

screenshot() {
        case $1 in
        area)
                maim -u -s\
                |xclip -selection clipboard \
                -t image/png
                dunstify -u normal \
                'ðŸ“¸ Screenshot' "copied to clipboard"
                #maim -s -u|xclip -selection clipboard -t image/png
                #dunstify -i $icon -u normal 'ðŸ“¸ Selection copied to clipboard'
                ;;
        wind)
                maim -u -i "$(xdotool getactivewindow)" "$outfile"; \
                xclip -selection clipboard \
                -t image/png < "$outfile"
                dunstify -u normal \
                'ðŸ“¸ Active window copied to clipboard and saved to' "$outfile"
                ;;
        full)
                maim -u "$outfile"
                dunstify -u normal 'ðŸ“¸ Full screen saved to' "$outfile"
                ;;
        *)
                ;;
        esac;
}

screenshot "$1"
~               
